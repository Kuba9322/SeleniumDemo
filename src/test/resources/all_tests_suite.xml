<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="All Pet Store Tests" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="examples.utils.testng.listeners.TestListener"/>
    </listeners>

    <test name="Smokes">
        <classes>
            <class name="examples.tests.smokes.MainPageTest"/>
        </classes>
    </test>

    <test name="Functional">
        <classes>
            <class name="examples.tests.functional.*"/>
        </classes>
    </test>

</suite>